<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.popup">
    <top>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Label text="Insert image from URL:" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="22.0" />
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <TextArea prefHeight="200.0" prefWidth="200.0" fx:id="urlLink"/>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="BOTTOM_CENTER">
            <Button mnemonicParsing="false" text="Insert Image" textAlignment="CENTER" HBox.hgrow="ALWAYS" fx:id="insertImage" onAction="#insertImage"/>
            <Button mnemonicParsing="false" text="Cancel" textAlignment="CENTER" HBox.hgrow="ALWAYS" fx:id="cancel" onAction="#cancel"/>
        </HBox>
    </bottom>
</BorderPane>
